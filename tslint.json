{
  "extends": [
    "tslint-config-airbnb",
    "tslint-sonarts"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "dist/**",
      "**/*.mock.ts"
    ]
  },
  "rules": {
    "no-boolean-literal-compare": false,
    "semicolon": [
      true,
      "never"
    ],
    "ter-arrow-parens": false,
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "indent": [
      true,
      "spaces",
      4
    ],
    "ter-indent": false,
    "max-line-length": [
      true,
      200
    ],
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "import-name": false
  }
}